mixin TeamMember(config) 
  .col-sm-6.col-lg-3.text-center
    div(class=`${config.shadowClass}`)
      img(src=`${CWD}assets/img/gallery/${config.image}` width='200' alt='...' class=`${config.teamBg}`)
    h5.fw-bold.mt-3.mb-1=config.name
    p=config.designation

mixin Team
  +Section('container container-lg-fluid container-xl').py-0
    +Background({image: `${CWD}assets/img/illustrations/team-bg.png`, attrs: { style: { 'background-position': 'left top', 'background-size': 'auto',} }, className: '' })
    .row.justify-content-center.mb-6.circle-blend.circle-warning
      .col-lg-6.text-center.mx-auto.mb-7.mt-5
        h5.fw-bold.fs-3.fs-lg-5.lh-sm.mb-3 Our Team
        p.mb-0 Klean is an elegant HTML5 template and a perfect starting point for your next SaaS oriented site, carefully curated by 
          span.fw-bold ThemeWagon
      .col-xxl-9
        .row.flex-center.g-0
          each item in teams
            +TeamMember(item)
    .row  
      .col-auto.mx-auto.mb-8
        button.btn.btn-klean-outline.order-0.text-gradient(type='submit') View Full Team        