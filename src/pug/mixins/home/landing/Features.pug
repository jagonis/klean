mixin Feature(config)
  .col-md-4.mb-6
    .text-center.px-lg-3
      img.img-fluid.mb-3(src=`${CWD}assets/img/icons/${config.image}` width="90"  alt='...')
      h5.fw-bold=config.title
      p.mb-md-0.px-xxl-6=config.text

